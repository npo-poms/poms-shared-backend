<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="nl.vpro.api">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
    </context:component-scan>


    <bean id="couchDbMediaServer" class="org.jcouchdb.db.Database">
        <constructor-arg name="server">
            <bean class="org.jcouchdb.db.ServerImpl">
                <constructor-arg value="${couchdb.media.server.host}" name="host"/>
                <constructor-arg value="${couchdb.media.server.port}" name="port"/>
            </bean>
        </constructor-arg>
        <constructor-arg value="${couchdb.media.db}" name="name"/>
    </bean>

    <bean id="conversionService"
          class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <bean class="nl.vpro.spring.converter.QueryResponseToSearchResultConverter">
                    <property name="img_url_template" value="${solr.imageurl.template}"/>
                </bean>
                <bean class="nl.vpro.spring.converter.QueryResponseToSearchSuggestionsConverter"/>
                <bean class="nl.vpro.spring.converter.ProgramToAnnotationConverter"/>
                <bean class="nl.vpro.spring.converter.ESSearchResponseToSearchResultConverter"/>
            </set>
        </property>
    </bean>

  <bean id="jacksonHttpMessageConverter"
        class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
      <property name="supportedMediaTypes">
          <list>
              <bean class="org.springframework.http.MediaType">
                  <constructor-arg index="0" value="application"/>
                  <constructor-arg index="1" value="json"/>
              </bean>
          </list>
      </property>

      <property name="objectMapper">
          <bean class="nl.vpro.jackson.MediaMapper"/>
      </property>
  </bean>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
      <property name="messageConverters">
        <list>
          <ref bean="jacksonHttpMessageConverter"/>
          <bean class="org.springframework.http.converter.xml.Jaxb2RootElementHttpMessageConverter" />
          <bean class="org.springframework.http.converter.ByteArrayHttpMessageConverter" />
          <bean class="org.springframework.http.converter.StringHttpMessageConverter" />
          <bean class="org.springframework.http.converter.ResourceHttpMessageConverter" />
          <bean class="org.springframework.http.converter.xml.SourceHttpMessageConverter" />
          <bean class="org.springframework.http.converter.xml.XmlAwareFormHttpMessageConverter" />
        </list>
      </property>
    </bean>

    <!-- This is a utility for converting upstream error responses into matching exceptions and rethrow them
  for the client-->
    <bean id="errorConverter" class="nl.vpro.util.rs.error.ErrorResponseToExceptionConverter">
        <constructor-arg ref="restTemplate"/>
    </bean>

    <!-- connection to the POMS couchdb instance-->
    <bean id="couchdbUrlprovider" class="nl.vpro.api.util.UrlProvider">
        <property name="host" value="${couchdb.media.server.host}"/>
        <property name="port" value="${couchdb.media.server.port}"/>
        <property name="uri" value="${couchdb.media.db}"/>
    </bean>

    <!-- connection to the User Generated Content service (rest api)-->

    <bean id="ugcUrlprovider" class="nl.vpro.api.util.UrlProvider">
        <property name="host" value="${vpro.ugc.url}"/>
        <property name="port" value="${vpro.ugc.port}"/>
        <property name="uri" value="${vpro.ugc.context}"/>
    </bean>

    <!-- Create an ElasticSearch client with a nice factory bean -->
    <bean id="myESClientFactory" class="nl.vpro.api.util.ESClientFactory">
        <property name="transportAddresses">
            <list>
                <bean class="nl.vpro.api.util.UrlProvider">
                    <property name="host" value="${elasticSearch.host}"/>
                    <property name="port" value="${elasticSearch.port}"/>
                </bean>
            </list>
        </property>
        <property name="sniffCluster" value="false"/>
        <property name="clusterName" value="${elasticSearch.cluster}"/>
    </bean>
    <bean id="esClient" class="org.elasticsearch.client.Client" factory-bean="myESClientFactory" factory-method="buildClient"/>


    <!-- ElasticSearch Search implementation-->
    <bean id="essearch" class="nl.vpro.api.service.search.ESSearch">
        <property name="searchFields"
                  value="titleMain,titleAlternative,descriptionMain,descriptionShort,descriptionAlternative"/>
        <property name="searchFieldBoosting" value="2.0f,2.0f,1.0f,1.0f,1.0f"/>
        <property name="pomsIndexName" value="${elasticSearch.poms.index}"/>
    </bean>

    <!-- Solr search implementation-->
    <bean id="search" class="nl.vpro.api.service.search.SolrSearch">
        <property name="searchFields"
                  value="titleMain,titleAlternative,descriptionMain,descriptionShort,descriptionAlternative"/>
        <property name="searchFieldBoosting" value="2.0f,2.0f,1.0f,1.0f,1.0f"/>
    </bean>

    <!-- The solr search java client-->
    <bean class="org.apache.solr.client.solrj.impl.HttpSolrServer" id="solrServer">
        <constructor-arg value="${solr.media.api.url}"/>
    </bean>

</beans>