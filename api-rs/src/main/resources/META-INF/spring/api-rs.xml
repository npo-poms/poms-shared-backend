<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


  <context:annotation-config/>
  <context:component-scan base-package="nl.vpro.api">
    <context:include-filter type="annotation" expression="javax.ws.rs.ext.Provider"/>
  </context:component-scan>
  <context:component-scan base-package="nl.vpro.util.rs">
    <context:include-filter type="annotation" expression="javax.ws.rs.ext.Provider"/>
  </context:component-scan>

  <bean class="nl.vpro.api.filter.JsonpCallbackFilter" id="jsonpCallbackFilter"/>

  <bean class="nl.vpro.api.cors.CorsPolicyImpl" id="corsPolicy">
    <constructor-arg index="0" value="${cors.enabled}"/>
    <constructor-arg index="1" value="${cors.policy}"/>
  </bean>
</beans>