<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <bean class="nl.vpro.resteasy.JacksonContextResolver"/>

  <bean id="mainMediaRepository" class="nl.vpro.domain.api.media.MediaRepositoryImpl">
    <constructor-arg ref="couchdbMediaRepository"/>
    <constructor-arg ref="elasticMediaRepository"/>
    <constructor-arg>
      <bean class="nl.vpro.domain.api.media.FallbackMediaRepositoryImpl">
        <constructor-arg>
          <list>
            <ref bean="couchdbMediaRepository"/>
            <ref bean="elasticMediaRepository"/>
          </list>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="mediaService" class="nl.vpro.domain.api.media.MediaServiceImpl">
    <constructor-arg ref="profileService"/>
    <constructor-arg ref="mainMediaRepository"/>
    <constructor-arg ref="couchdbMediaRepository"/>
  </bean>

  <context:component-scan base-package="nl.vpro.api">
    <context:include-filter type="annotation" expression="javax.ws.rs.ext.Provider"/>
    <context:include-filter type="annotation" expression="javax.ws.rs.NameBinding"/>
  </context:component-scan>

  <bean class="nl.vpro.api.cors.CorsPolicyImpl" id="corsPolicy">
    <constructor-arg index="0" value="${cors.enabled}"/>
    <constructor-arg index="1" value="${cors.policy}"/>
  </bean>

  <context:component-scan base-package="nl.vpro.api.rs.v2"/>

</beans>
