<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

  <bean class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="nl.vpro.domain.gtaa.GTAARepository" type="java.lang.Class"/>
  </bean>


  <bean class="nl.vpro.domain.api.thesaurus.GTAAKeysRepositoryImpl">
    <property name="locations">
      <list>
        <value>classpath:/gtaa-keys.properties</value>
        <value>file://${user.home}/conf/gtaa-keys.properties</value>
      </list>
    </property>
  </bean>

</beans>
