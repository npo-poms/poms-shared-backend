<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
               ">

  <bean id="lowlevelClientFactory" class="nl.vpro.elasticsearchclient.ClientElasticSearchFactory">
    <property name="hosts" value="https://localhost:#{T(java.lang.System).getProperty('integ.http.port', '9200')}" />
    <property name="clusterName" value="#{T(java.lang.System).getProperty('integ.cluster.name', 'elasticsearch')}" />
    <property name="basicUser" value="admin" />
    <property name="basicPassword" value="admin" />
    <property name="ignoreSSL" value="true" />
  </bean>


  <bean id="clientFactory" class="nl.vpro.elasticsearch.highlevel.HighLevelClientFactory">
    <constructor-arg name="lowLevelFactory" ref="lowlevelClientFactory" />
  </bean>
</beans>
