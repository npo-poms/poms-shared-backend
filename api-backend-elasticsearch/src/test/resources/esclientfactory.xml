<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
               ">


  <bean id="clientFactory" class="nl.vpro.elasticsearch7.TransportClientFactory">
    <property name="transportAddresses">
      <list>
        <bean class="nl.vpro.util.UrlProvider">
          <constructor-arg name="host" value="localhost"/>
          <constructor-arg name="port" value="#{T(java.lang.System).getProperty('integ.java.port', '9300')}" />
        </bean>
      </list>
    </property>
    <property name="clusterName" value="#{T(java.lang.System).getProperty('integ.cluster.name', 'elasticsearch')}" />
  </bean>
</beans>
